<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="profile.css">
    <link rel="icon" type="image/x-icon" href="./deepkreis-logo.png">
    <title>Profile</title>
</head>
<body>
    

    <div class="container">
        <div class="profile">
            <img id="image" src="<%= pic %>" onerror="standby()" alt="no pic">
            <p><%= name %></p>

            <form action="/update-pic" method="post" enctype="multipart/form-data">
                <p><%= msg %></p>
                <label for="proImage">UPLOAD IMAGE</label><br>
                <input id="proImage" name="image" type="file"><br>
                <button type="submit">change pic</button>
            </form>
        </div>

        <form action="/signout" method="post">
            <button id="signout" type="submit">signout</button>
        </form>
    </div>



    <div class="head">
        <h1>Deep Kreis</h1>
    </div>
    <div class="nav">
        <a href="/"><li>Community</li></a>
        <a href="/chat"><li>Chat</li></a>
        <a href="/post"><li>Create</li></a>
        <!-- <a href="/community"><li>Community</li></a> -->
        <a href="/profile"><li>Profile</li></a>
    </div>


</body>
<script>
    function standby(){
        document.querySelector('#image').src = './altpic.jpg'
    }
</script>
</html>